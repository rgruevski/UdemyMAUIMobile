<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdemyMAUIMobile.LayoutContent"
             xmlns:myFontSize="clr-namespace:UdemyMAUIMobile"
             Title="LayoutContent">
    <VerticalStackLayout x:Name="VStackLayout" Padding="30, 20, 40, 30">
        <Label 
            Text=" - LayoutContent - "
            FontSize="{myFontSize:GlobalFontSize}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid ColumnDefinitions="Auto, 30, Auto">
            <Button Grid.Column="0" Text="0" WidthRequest="100"/>
            <Button Grid.Column="2" Text="2" WidthRequest="100"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>