<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdemyMAUIMobile.TestContent"
             Title="TestContent">
    <VerticalStackLayout>
        <Label 
            x:Name="labelCounter"
            Text="Count 0"
            FontSize="22" 
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
                x:Name="buttonCounter"
                Text="Click to Count"
                Clicked="buttonCounter_Clicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>